<rule id="lazyruleXBMC_sendText" scope="public">
	<example>écrit ACDC dans la fenêtre</example>
	<tag>out.action=new Object();</tag>
	<item>écris</item><ruleref special="GARBAGE" /><item>dans la fenêtre<tag>out.action.action="sendText";</tag><tag>out._attributes.dictation="true";</tag></item>
</rule>

